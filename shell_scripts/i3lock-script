#!/bin/bash
i3lock -e -B 5 -k --time-color=00ff00 --date-color=00ff00 --indicator --inside-color=00000000 --ring-color=00ff00 --keyhl-color=0000ff --insidever-color=00000000 --ringver-color=0000ff --insidewrong-color=00000000 --ringwrong-color=ff0000 --bshl-color=ff0000 --time-str="%H:%M" --verif-text="Checking" --wrong-text="Incorrect" --noinput-text="Empty" --verif-color=0000ff --wrong-color=ff0000 --modif-color=ff0000 --greeter-text="Hello, $(getent passwd "$USER"  | cut -d ':' -f 5 | cut -d ',' -f 1), Computer Locked" --greeter-color=00ff00 --greeter-pos="w/2:h/2+2*r" --date-str="%A,%d-%m-%Y"
